    <focused border_color="#709918"/>
    <over/>
    <pressed bg_color="#709918" text_color="#FFFFFF"/>
  </style>
  <style name="highlight_backspace" border_color="#00000000" icon="uiex_keyboard_backspace_n" round_radius="4" text_color="#FFFFFF" bg_color="#424242">
