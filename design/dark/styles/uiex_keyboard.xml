    <normal/>
    <over/>
    <pressed icon="uiex_close_p"/>
  </style>
  <style name="en" border_color="#00000000" icon="uiex_keyboard_EN" round_radius="4" text_color="#FFFFFF" bg_color="#424242">
    <normal/>
    <disable bg_color="#3B3B3B" text_color="#595959"/>
    <focused border_color="#709918"/>
    <over/>
    <pressed bg_color="#709918" text_color="#FFFFFF"/>
  </style>
  <style name="highlight" border_color="#00000000" font_size="22" round_radius="4" text_color="#FFFFFF"  bg_color="#424242">
