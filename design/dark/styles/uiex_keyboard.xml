    <normal/>
    <disable bg_color="#3B3B3B" text_color="#595959"/>
    <focused border_color="#709918"/>
    <over/>
    <pressed bg_color="#709918" x_offset="1" y_offset="1"/>
  </style>
  <style name="candidates" margin="3" text_color="#FFFFFF" font_size="22">
    <normal/>
    <over border_color="#4C4C4C"/>
    <pressed bg_color="#1A1A1A" border_color="#4C4C4C"/>
  </style>
  <style name="candidates_focusable" text_color="#FFFFFF" font_size="22">
