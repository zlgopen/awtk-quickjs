<window anim_hint="htranslate" theme="image_value">
  <view x="0" y="0" w="100%" h="100%" children_layout="default(c=3,r=8)">
    <image_value  value="0" image="battery_" click_add_delta="1" min="0" max="5"/>
    <image_value  value="0" image="battery_"
      animation="value(from=0, to=5, duration=10000)"/>
    <image_value  value="0" format="%02d" image="num_"
      animation="value(from=10, to=100, duration=100000)"/>
    
    <image_value  value="0" format="%02d" image="num_" style="left_top"
      animation="value(from=10, to=100, duration=100000)"/>
    <image_value  value="0" format="%02d" image="num_" style="left_middle"
      animation="value(from=10, to=100, duration=100000)"/>
    <image_value  value="0" format="%02d" image="num_" style="left_bottom"
      animation="value(from=10, to=100, duration=100000)"/>
    
    <image_value  value="0" format="%02d" image="num_" style="center_top"
      animation="value(from=10, to=100, duration=100000)"/>
    <image_value  value="0" format="%02d" image="num_" style="center_middle"
      animation="value(from=10, to=100, duration=100000)"/>
    <image_value  value="0" format="%02d" image="num_" style="center_bottom"
      animation="value(from=10, to=100, duration=100000)"/>
    
    <image_value  value="0" format="%02d" image="num_" style="right_top"
      animation="value(from=10, to=100, duration=100000)"/>
    <image_value  value="0" format="%02d" image="num_" style="right_middle"
      animation="value(from=10, to=100, duration=100000)"/>
    <image_value  value="0" format="%02d" image="num_" style="right_bottom"
      animation="value(from=10, to=100, duration=100000)"/>
    
    <image_value  value="0" format="%02d" image="num_" style="scale_h"
      animation="value(from=10, to=1000, duration=10000)"/>
    <image_value  value="0" format="%02d" image="num_" style="scale"
      animation="value(from=10, to=1000, duration=10000)"/>
    <image_value  value="0" format="%02d" image="num_" style="scale_auto"
      animation="value(from=10, to=1000, duration=10000)"/>
    
    <image_value  value="0" format="%04d" image="num_"
      animation="value(from=10, to=10000, duration=100000)"/>

    <image_value  value="0" format="%02.2f" image="num_"
      animation="value(from=0, to=100, duration=1000000)"/>

    <image_value  value="0" format="%.4f" image="num_"
      animation="value(from=0, to=100, duration=1000000)"/>

    <image_value  value="-2" format="%d" image="num_"/>
    <image_value  value="3" format="+%d" image="num_"/>
  </view>
  <button name="close" self_layout="default(x=center,y=bottom:10,w=50%,h=30)" 
    floating="true" text="Close"/>
</window>
