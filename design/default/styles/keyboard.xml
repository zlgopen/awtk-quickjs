<button>
  <style name="default" border_color="#a0a0a0"  text_color="black" i
    font_size="20" round_radius="5">
    <normal     bg_color="#f0f0f0" />
    <pressed    bg_color="#fefefe" x_offset="1" y_offset="1"/>
    <over       bg_color="#e0e0e0" />
    <focused    bg_color="#e0e0e0" />
    <disable    bg_color="gray" text_color="#d0d0d0" />
  </style>

  <style name="highlight" border_color="#a0a0a0"  text_color="black">
    <normal     bg_color="#a8b0b0" />
    <pressed    bg_color="#c0c0c0" />
    <over       bg_color="#e0e0e0" />
    <disable    bg_color="gray" text_color="#d0d0d0" />
    <focused    bg_color="#c0c0c0" />
  </style>
  
  <style name="candidates" text_color="black" margin="5">
    <normal  />
    <pressed    bg_color="#f0f0f0" border_color="#a0a0a0"/>
    <over       bg_color="#e0e0e0" border_color="#a0a0a0"/>
    <focused    bg_color="#e0e0e0" />
  </style>
  
  <style name="candidates_focusable" text_color="black" margin="5">
    <normal  />
    <pressed    bg_color="#c0c0c0" border_color="#a0a0a0"/>
    <over       bg_color="#e0e0e0" border_color="#a0a0a0"/>
    <focused    bg_color="#e0e0e0" />
    <disable    bg_color="gray" text_color="#d0d0d0" />
  </style>
  
  <style name="close" text_color="black" text_align_h="center" text_align_v="middle">
    <normal  bg_color="#f0f0f0"/>
    <pressed    bg_color="#c0c0c0" border_color="#a0a0a0"/>
    <over       bg_color="#e0e0e0" border_color="#a0a0a0"/>
    <focused    bg_color="#e0e0e0" />
  </style>
</button>

<candidates>
  <style name="default">
    <normal     bg_color="#fafafa" />
  </style>
</candidates>

<keyboard>
  <style name="default">
    <normal bg_color="#cfd4da"/>
  </style>
  <style name="transparent">
    <normal />
  </style>
</keyboard>

<column>
  <style name="placeholder">
    <normal bg_color="#f0f0f0"/>
  </style>
</column>

